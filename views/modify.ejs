<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/home.css">
    
    <title>Modify</title>

</head>

<% 
function formatPhoneNumber(phoneNumberString) {
    var cleaned = ('' + phoneNumberString).replace(/\D/g, '')
    var match = cleaned.match(/^(\d{3})(\d{3})(\d{4})$/)
    if (match) {
      return '(' + match[1] + ') ' + match[2] + '-' + match[3]
    }
    return null
  }
  function formatDate(dateString) {
    var date = dateString.substr(0,2) + "/" + dateString.substr(2,2) + "/" + dateString.substr(4);
    return date
  }
  %>

<body>

    <div class="row">

        <div class="logo container col-2">
            <img src="../img/testing.webp" alt="logo">
            <div class="container sections prof-section">

                <ul class="links">
                    <li><a href="/home">Employees</a></li>
                    <li><a href="/add">Add Employees</a></li>
                    <li><a href="#">Announcements</a></li>
                    <li><a href="/settings">Settings</a></li>
                    <li><a href="/tipout">Tipout</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>

            </div>
        </div>
        
        <div class="container directory col">
            <h2 class="text-center">Modify Employee</h2>
                
                    <div class="card shadow col prof">
                        
                        <div class="card-body profile">
                            <form action="/<%= Employees.id %>?_method=PUT" method="POST">
                            
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                      <span class="input-group-text">First Name</span>
                                    </div>
                                    <input name = "firstName" type="text" aria-label="First name" class="form-control" value="<%= Employees.f_name %>">
                                  </div>


                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">Last Name</span>
                                </div>
                                <input type="text" aria-label="Last name" class="form-control" name = "lastName" value="<%= Employees.l_name %>">
                              </div>


                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">ID:</span>
                                </div>
                                <input type="text" aria-label="ID" class="form-control" name = "empID" value="<%= Employees.ID %>">
                              </div>


                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">Nickname:</span>
                                </div>
                                <input type="text" aria-label="nickname" class="form-control" name = "nickname" value="<%= Employees.nickname %>">
                              </div>



                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">Position:</span>
                                </div>
                                <input type="text" aria-label="Position" class="form-control" name = "def_pos" value="<%= Employees.def_pos %>">
                              </div>


                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">Phone Number:</span>
                                </div>
                                <input type="text" aria-label="Phone Number" class="form-control" name = "cell_num" value="<%= Employees.cell_num %>">
                              </div>
  

                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">Hire Date:</span>
                                </div>
                                <input type="text" aria-label="Hire Date" class="form-control" name = "hire_date" value="<%= Employees.hire_date %>">
                              </div>


                            <div class="input-group">
                                <div class="input-group-prepend">
                                  <span class="input-group-text">Email:</span>
                                </div>
                                <input type="text" aria-label="Email" class="form-control" name = "email" value="<%= Employees.email %>">
                              </div>

                            <p class="card-text"><b>Employee is:</b></p>
                            <input type="radio" id="active" name = "active" value="true" <% if(Employees.active){ %>
                                 <%="checked" %>
                            <%}%>>
                            <label for="active">Active</label><br>
                            <input type="radio" id="not active" name = "active" value="false" <% if (!Employees.active){ %>
                                <%="checked" %>
                           <%}%>>
                            <label for="active">Not Active</label><br>
                            <a href="/<%= Employees.id %>" class="btn btn-primary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Modify</button>
                        </form> 
                        </div>
                    
                    </div>
                
        </div>
    
    </div>
</body>
</html>