<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/home.css">
    
    <title>Add</title>

</head>

<% 
function formatPhoneNumber(phoneNumberString) {
    var cleaned = ('' + phoneNumberString).replace(/\D/g, '')
    var match = cleaned.match(/^(\d{3})(\d{3})(\d{4})$/)
    if (match) {
      return '(' + match[1] + ') ' + match[2] + '-' + match[3]
    }
    return null
  }
  function formatDate(dateString) {
    var date = dateString.substr(0,2) + "/" + dateString.substr(2,2) + "/" + dateString.substr(4);
    return date
  }
  %>

<body>

    <div class="row">

        <div class="logo container col-2">
            <img src="../img/testing.webp" alt="logo">
            <div class="container sections prof-section">

                <ul class="links">
                    <li><a href="/home">Employees</a></li>
                    <li><a href="#">Add Employees</a></li>
                    <li><a href="#">Announcements</a></li>
                    <li><a href="#">Settings</a></li>
                </ul>

            </div>
        </div>
        
        <div class="container directory col">
            <h2 class="text-center">Add Employee</h2>
                
                    <div class="card shadow col prof">
                        
                        <div class="card-body profile">
                            <form action="/home" method="POST">
                            <p class="card-text"><b>First Name:</b></p>
                            <input type="text" name = "firstName" value="<%= Employees.f_name %>">
                            <p class="card-text"><b>Last Name:</b></p>
                            <input type="text" name = "lastName" value="<%= Employees.l_name %>">
                            <p class="card-text"><b>ID:</b></p>
                            <input type="text" name = "empID" value="<%= Employees.ID %>">
                            <p class="card-text"><b>Nickname:</b></p>
                            <input type="text" name = "nickname" value="<%= Employees.nickname %>">
                            <p class="card-text"><b>Position:</b></p>
                            <input type="text" name = "def_pos" value="<%= Employees.def_pos %>">
                            <p class="card-text"><b>Phone Number:</b></p>
                            <input type="text" name = "cell_num" value="<%= Employees.cell_num %>">
                            <p class="card-text"><b>Hire Date:</b></p>
                            <input type="text" name = "hire_date" value="<%= Employees.hire_date %>">
                            <p class="card-text"><b>Email:</b></p>
                            <input type="text" name = "email" value="<%= Employees.email %>">
                            <p class="card-text"><b>Employee is:</b></p>
                            <input type="radio" id="active" name = "active" value="true" <% if(Employees.active){ %>
                                 <%="checked" %>
                            <%}%>>
                            <label for="active">Active</label><br>
                            <input type="radio" id="not active" name = "active" value="false" <% if (!Employees.active){ %>
                                <%="checked" %>
                           <%}%>>
                            <label for="active">Not Active</label><br>
                            <a href="/<%= Employees.id %>" class="btn btn-primary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form> 
                        </div>
                    
                    </div>
                
        </div>
    
    </div>
</body>
</html>